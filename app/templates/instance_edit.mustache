<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <p class="lead">Edit the instance from <a href="/books/{{book_slug}}"><em>{{book_title}}</em></a>.</p>
      <form action="/books/{{book_slug}}/instances/{{id}}/edit" method="POST">
        {{> partials/instance_form}}
          <div class="form-group">
            {{{ flag_modal_button }}}
          </div>
      </form>
    </div>
    <div class="col-md-6">
      &nbsp;
    </div>
  </div>
</div>
{{#logged_in}}
  {{> partials/flag_modal }}
{{/logged_in}}
<div class="modal fade" id="addPlaceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Add new place</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        {{> partials/place_form }}
      </div>
    </div>
  </div>
</div>


