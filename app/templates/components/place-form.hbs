    <div class="row">
      <div class="col-6">
        {{#bs-form onSubmit=(action "search") searchTerm=search as |searchForm|}}
          {{#searchForm.group}}
            <label class="control-label">Search</label>
            <div class="input-group">
              <input value={{searchTerm}} class="form-control" onchange={{action (mut searchTerm) value="target.value"}} type="text">
              <span class="input-group-btn">
                <!-- <button class="btn btn-sm btn-secondary" type="submit" onClick={{!action "search"}}>Search gazetteer</button> -->
                {{bs-button buttonType="submit" type="secondary" defaultText="Search Gazetteer"}}
              </span>
            </div>
          {{/searchForm.group}}
        {{/bs-form}}
        {{#bs-form onSubmit=(action "addPlace") model=this as |form|}}
          {{form.element controlType="text" label="Name" placeholder="Place name" property="name"}}
          {{!What3Words hidden?}}
          <div class="row">
            <div class="col-6">
              {{form.element controlType="number" label="Latitude (ùìé)" placeholder="Latitude" property="lat" step="0.00001"}}
            </div>
            <div class="col-6">
              {{form.element controlType="number" label="Longitude (ùìç)" placeholder="Longitude" property="lon" step="0.00001"}}
            </div>
          </div>
          {{form.element controlType="text" label="Source" placeholder="Source" property="source"}}
          {{#form.group}}
            <label class="control-label">Confidence</label>
            <select class="form-control" value={{confidence}} onchange={{action (mut confidence) value="target.value"}}>
            <option value="3">Very confident this is the place.</option>
            <option value="2" selected>Mostly confident this is the place.</option>
            <option value="1">Not very sure this is the place.</option>
            <option value="0">Can&rsquo;t find the place.</option>
          </select>
          {{/form.group}}
          {{form.element controlType="textarea" label="Note" property="note"}}
          {{form.element controlType="hidden" property="bbox"}}
          {{form.element controlType="hidden" property="geonameid"}}
          {{bs-button buttonType="submit" type="primary" defaultText="Add Place"}}
        {{/bs-form}}
      </div>
      <div class="col-6">
        {{#if searchResultsToggle}}
          {{search-results results=results useThisPlace=(action "sendPlace")}}
        {{/if}}
      </div>
    </div>
